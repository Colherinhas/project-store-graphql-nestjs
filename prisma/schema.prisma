generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id         String             @id @unique @default(uuid())
  categories ProductsTypeEnum[]
  name       String
  stock      Int
  price      Float
}

model User {
  id        String         @id @unique @default(uuid())
  name      String
  email     String
  status    UserStatusEnum @default(ACTIVE)
  password  String
  createdAt DateTime       @default(now())
  updatedAt DateTime?      @updatedAt
  deletedAt DateTime?
}

enum ProductsTypeEnum {
  CLOTHING
  ELECTRONICS
  EXERCISING
  TOYS
}

enum UserStatusEnum {
  ACTIVE
  INACTIVE
  BANNED
}
